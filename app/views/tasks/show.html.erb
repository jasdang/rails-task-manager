<h1><%= @task.title %></h1>
<h3><%= @task.details%></h3>
<p><%= @task.completed ? "This task is completed" : "This task is not completed yet" %></p>
<%= link_to "Edit", task_edit_path(@task) %>
<%= link_to "Delete", task_path(@task), method: :delete, data: {confirm: "Are you sure?"} %>
<%= link_to "Back to list", tasks_path %>
